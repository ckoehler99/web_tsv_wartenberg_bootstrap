<INCLUDE_TYPOSCRIPT: source="FILE:EXT:bootstrap_package/Configuration/TypoScript/constants.typoscript">


############
### PAGE ###
############
page {
    logo {
        file = EXT:tsv_wartenberg_bootstrap_v2/Resources/Public/Images/logo.png
        height = 95
        width = 125
        alt = tsv-wartenberg
        linktitle = tsv-wartenberg
    }
    favicon {
        file = EXT:tsv_wartenberg_bootstrap_v2/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Layouts/Page/
        partialRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Partials/Page/
        templateRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Templates/Page/
    }

    theme {
        navigation.type = top
        navigation.style = default
        breadcrumb.enableLevel = 1
        language.enable = 0
        socialmedia.enable = 1
        copyright.enable = 1
        copyright.text = <p class="mb-0"><a href="/footer/impressum-des-tsv-wartenbergs">Impressum</a> <span class="mx-3">|</span> <a href="/typo3">Login</a></p>
        cookieconsent.enable = 1
        cookieconsent.cookie.expiryDays = 30
    }

    page {
        # UA Analytics ist seit Juli 2024 deaktiviert - auf GA4 umstellen oder entfernen
        # tracking.google.trackingID = UA-44947660-1
    }
}




##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
    view {
        layoutRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Layouts/
        partialRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Partials/
        templateRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Templates/
    }
}


########################
### CONTENT ELEMENTS ###
########################
plugin.bootstrap_package_contentelements {
    view {
        layoutRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:tsv_wartenberg_bootstrap_v2/Resources/Private/Templates/ContentElements/
    }
}


